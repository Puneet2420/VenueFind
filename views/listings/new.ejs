<% layout("layouts/boilerplate.ejs") -%>

<div class="row">
  <div class="col-8 offset-2">
      <h4>Create New Listing</h4>
      <form method="POST" action="/listings" class="needs-validation" novalidate>

        <div class="mb-3">
          <label class="fom-label" for="title">Enter Title</label>
          <input class="form-control" name="listing[title]" placeholder="Title" type="text" required />
          <div class="invalid-feedback">Please enter a valid input</div>
          <div class="valid-feedback">Title looks good!</div>
        </div>

        <div class="mb-3">
          <label class="fom-label" for="description">Description</label><br>
          <textarea name="listing[description]" placeholder="  write somthing..." required></textarea>
          <div class="invalid-feedback">Please enter a valid input</div>
        </div>

        <div class="mb-3">
          <label class="fom-label" for="image">Enter image link</label>
          <input class="form-control" name="listing[image]" placeholder="URL/Link" type="text" />
          <div class="invalid-feedback">Please enter a valid input</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label class="fom-label" for="price">Enter Price per day</label>
            <input class="form-control" name="listing[price]" placeholder="&#8377;" type="number"  required/>
            <div class="invalid-feedback">Please enter a valid input</div>
          </div>
          <div class="mb-3 col-md-8">
            <label class="fom-label" for="country">Country</label>
            <input class="form-control" name="listing[country]" placeholder="India" type="text" required/>
            <div class="invalid-feedback">Please enter a valid input</div>
          </div>
        </div>
        <div class="mb-3">
          <label class="fom-label" for="location">Location</label>
          <input class="form-control" name="listing[location]" placeholder="Mumbai,goa,etc" type="text" required/>
          <div class="invalid-feedback">Please enter a valid input</div>
        </div>
        <button class="btn btn-danger">Add</button>
      </form>
    </div>
  </div>
